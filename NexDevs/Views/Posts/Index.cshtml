@model IEnumerable<NexDevs.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<div class="d-flex justify-content-between align-items-center my-3">
    <p class="m-0">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <div class="d-flex gap-3">
        <a asp-action="Approved" class="btn btn-dark">Approved</a>
        <a asp-action="ToBeApprove" class="btn btn-dark">To be approved</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikesCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Approved)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkId)
                </td>
                <td>
                    @Html.Raw(item.ContentPost.Length > 50
                             ? item.ContentPost.Substring(0, 50) + "..."
                             : item.ContentPost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LikesCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentsCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Approved)
                </td>
                <td>
                    <div class ="btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.PostId }, new { @class = "btn btn-outline-dark btn-sm" })
                        @Html.ActionLink("Details", "Details", new { id = item.PostId }, new { @class = "btn btn-outline-dark btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.PostId }, new { @class = "btn btn-outline-dark btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
