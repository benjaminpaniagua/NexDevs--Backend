@model NexDevs.Models.PostImage

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkId" class="control-label">WorkId</label>
                <input asp-for="WorkId" class="form-control" />
                <span asp-validation-for="WorkId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentPost" class="control-label">Content Post</label>
                <input asp-for="ContentPost" class="form-control" />
                <span asp-validation-for="ContentPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentReceipt" class="control-label">Payment Receipt</label>
                <input asp-for="PaymentReceipt" class="form-control" />
                <span asp-validation-for="PaymentReceipt" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group">
                <label asp-for="PostImageUrl" class="control-label">Image</label>
                @* aqui se configura el  input para subir un archivo *@
                <input asp-for="PostImageUrl" class="form-control" name="PostImageUrl" type="file" />
                <span asp-validation-for="PostImageUrl" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group d-flex justify-content-between align-items-center mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
