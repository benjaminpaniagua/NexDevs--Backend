@model NexDevs.Models.Post

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkId" class="control-label"></label>
                <input asp-for="WorkId" class="form-control" />
                <span asp-validation-for="WorkId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentPost" class="control-label"></label>
                <input asp-for="ContentPost" class="form-control" />
                <span asp-validation-for="ContentPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="postImageUrl" class="control-label">Upload Image</label>
                <input type="file" class="form-control" name="postImageUrl" />
            </div>
            <div class="form-group d-flex justify-content-between align-items-center mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
