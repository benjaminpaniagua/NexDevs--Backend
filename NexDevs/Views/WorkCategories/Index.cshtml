@model IEnumerable<NexDevs.Models.WorkCategorie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="d-flex justify-content-between align-items-center my-3">
    <p class="m-0">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <form asp-controller="WorkCategories" asp-action="Index" method="get">
        <div class="d-flex gap-3">
            <input type="text" class="form-control" name="search" placeholder="Search by Name" id="inputDefault">
            <input type="submit" value="Search" class="btn btn-dark" />
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryImageUrl)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
