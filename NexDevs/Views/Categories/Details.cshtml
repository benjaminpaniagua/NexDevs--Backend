@model NexDevs.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryImageUrl)
        </dt>
        <dd class = "col-sm-10">
           @* Se verifica primero si hay una URL de imagen disponible *@
            @if (!string.IsNullOrEmpty(Model.CategoryImageUrl))
            {
                <img src="@Model.CategoryImageUrl" alt="Category Image" class="img-fluid" style="max-width: 200px;" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
    </dl>
</div>
<div class="form-group d-flex align-items-center mt-3 gap-3">
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }, new { @class = "btn btn-primary btn-sm" })|
    <a asp-action="Index">Back to List</a>
</div>
