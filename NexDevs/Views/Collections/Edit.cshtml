@model NexDevs.Models.Collection

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CollectionId" />
            <div class="form-group">
                <label asp-for="WorkId" class="control-label">Work Id</label>
                <input asp-for="WorkId" class="form-control" />
                <span asp-validation-for="WorkId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Collection Image</label>
                <img src="@Model.CollectionImageUrl" alt="Category Image" width="100" />
            </div>
            <div class="form-group">
                <label asp-for="CollectionImageUrl" class="control-label">Image</label>
                <input asp-for="CollectionImageUrl" class="form-control" name="CategoryImageUrl" type="file" />
                <span asp-validation-for="CollectionImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between align-items-center mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
