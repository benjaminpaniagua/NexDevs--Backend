@model NexDevs.Models.Collection

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorkId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkId)
        </dd>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.CollectionImageUrl))
            {
                <img src="@Model.CollectionImageUrl" alt="Category Image" class="img-fluid" style="max-width: 200px;" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CollectionId" />
        <div class="d-flex align-items-center gap-3">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Delete
            </button>|
            <a asp-action="Index">Back to List</a>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Do you want delete Collection Id: @Model.CollectionId?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Ok</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
