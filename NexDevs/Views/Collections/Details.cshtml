@model NexDevs.Models.Collection

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorkId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CollectionImageUrl)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.CollectionImageUrl))
            {
                <img src="@Model.CollectionImageUrl" alt="Collection Image" class="img-fluid" style="max-width: 200px;" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
    </dl>
</div>
<div class="form-group d-flex align-items-center mt-3 gap-3">
    @Html.ActionLink("Edit", "Edit", new { id = Model.CollectionId }, new { @class = "btn btn-primary btn-sm" })|
    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
</div>
